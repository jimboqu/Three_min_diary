
<div class='container'>
<div class='content'>
<h1>Index of days</h1>
<%= @quote.quote %>
<table>
  <thead>
    <tr>
      <th>Gift</th>
      <th>Thing</th>
      <th>Daily</th>
     
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= link_to day.created_at.strftime("%d %m %y"), day %></td>
        <td><%= day.gift %></td>
        <td><%= day.thing %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Day', new_day_path, class: "button is-primary" %>
</div>
</div>